#include <stdio.h>
#include <stdlib.h>

#define MAX 100

int visited[MAX]; // visited array for DFS
int queue[MAX], front = -1, rear = -1; // queue for BFS

// Function to enqueue for BFS
void enqueue(int x) {
    if (rear == MAX - 1) {
        printf("Queue overflow\n");
        return;
    }
    if (front == -1) front = 0;
    queue[++rear] = x;
}

// Function to dequeue for BFS
int dequeue() {
    if (front == -1 || front > rear) return -1;
    return queue[front++];
}

// BFS function
void BFS(int n, int adj[MAX][MAX], int start) {
    int i;
    int visitedBFS[MAX] = {0};

    enqueue(start);
    visitedBFS[start] = 1;

    printf("BFS Traversal: ");
    while (front <= rear) {
        int node = dequeue();
        printf("%d ", node);

        for (i = 0; i < n; i++) {
            if (adj[node][i] && !visitedBFS[i]) {
                enqueue(i);
                visitedBFS[i] = 1;
            }
        }
    }
    printf("\n");
}

// DFS function (recursive)
void DFS(int n, int adj[MAX][MAX], int start) {
    visited[start] = 1;
    printf("%d ", start);

    for (int i = 0; i < n; i++) {
        if (adj[start][i] && !visited[i]) {
            DFS(n, adj, i);
        }
    }
}

int main() {
    int n, e, i, j, u, v, start;
    int adj[MAX][MAX];

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter number of edges: ");
    scanf("%d", &e);

    // Initialize adjacency matrix
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++)
            adj[i][j] = 0;

    printf("Enter edges (u v) [0-based index]:\n");
    for (i = 0; i < e; i++) {
        scanf("%d %d", &u, &v);
        adj[u][v] = 1;
        adj[v][u] = 1; // comment this line for directed graph
    }

    printf("Enter starting vertex for traversal: ");
    scanf("%d", &start);

    // Perform BFS
    BFS(n, adj, start);

    // Perform DFS
    for (i = 0; i < n; i++) visited[i] = 0; // reset visited array
    printf("DFS Traversal: ");
    DFS(n, adj, start);
    printf("\n");

    return 0;
}
